@page "/"
@inject NavigationManager NavManager




<div class="d-flex justify-content-center">
    <div class="homepageBox">
        <h1>Visitorbook</h1>
        <p>Welcome to the visitor sign in app.<br />Click on one of the buttons below to continue.</p>
        <div>
            <button class="btn btn-success padRight" @onclick="SignInScreen">Sign In</button>
            <button class="btn btn-danger" @onclick="SignOutScreen">Sign Out</button>
        </div>
    </div>
    
</div>
@code {
    private int currentCount = 0;

    private void SignInScreen()
    {
        NavManager.NavigateTo("/signIn");
    }

    private void SignOutScreen()
    {
        NavManager.NavigateTo("/signOut");
    }
}
